{% extends "::blog-layout.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>
    <h3>Par : {{ post.author.name }}</h3>
    <p>Le : {{ post.createdAt | date('l m Y') }}</p>
    <ul class="list-inline">
        {% for tag in postTags %}
            <li>
                <a href="{{ path('posts_by_tag', {'tagName': tag.tagName }) }}">{{ tag.tagName }}</a>
            </li>
        {% endfor %}
    </ul>
    <p>{{ post.content | purify }}</p>
{% endblock %}
